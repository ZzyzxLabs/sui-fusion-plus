# Environment Configuration for Cross-Chain Relayer and Resolver
# =============================================================================
# This file contains all environment variables needed for the relayer and resolver services.
# Copy this file to .env and update the values according to your setup.

# Server Configuration
# -----------------------------------------------------------------------------
PORT=8000
NODE_ENV=development
SERVER_URL=http://localhost:8000

# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# Resolver Configuration
# -----------------------------------------------------------------------------
# Polling interval for checking new orders (in milliseconds)
POLLING_INTERVAL=30000

# Maximum number of retry attempts for failed operations
MAX_RETRIES=5

# Blockchain Configuration
# -----------------------------------------------------------------------------

# Sui Configuration
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_PRIVATE_KEY=your_sui_private_key_here
SUI_PACKAGE_ID=0x1234567890123456789012345678901234567890
# Note: Resolver address is automatically derived from SUI_PRIVATE_KEY

# Ethereum/EVM Configuration
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
EVM_PRIVATE_KEY=your_evm_private_key_here
EVM_FACTORY_ADDRESS=0x198d8047490317707b186a4dE727CA3E13B1bD78
EVM_RESOLVER_ADDRESS=0x6d515828112Fe62fc38da6B58A888bEDe6E4F38f
EVM_LOP_ADDRESS=0x2345678901234567890123456789012345678901

# Transaction Confirmation Settings
# -----------------------------------------------------------------------------
CONFIRMATION_BLOCKS_EVM=12
CONFIRMATION_BLOCKS_SUI=1

# Security and Performance
# -----------------------------------------------------------------------------
# Maximum time to wait for transaction confirmation (in milliseconds)
TX_TIMEOUT=300000

# Maximum gas price for EVM transactions (in gwei)
MAX_GAS_PRICE=50

# Safety deposit amounts (in wei for EVM, in MIST for Sui)
DEFAULT_SAFETY_DEPOSIT_EVM=1000000000000000000
DEFAULT_SAFETY_DEPOSIT_SUI=1000000000

# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
API_BASE_URL=http://localhost:8000/api/v1

# Request timeout for backend API calls (in milliseconds)
API_TIMEOUT=30000

# WebSocket Configuration (if applicable)
# -----------------------------------------------------------------------------
WS_URL=ws://localhost:8001
WS_RECONNECT_INTERVAL=5000

# Database Configuration (if using persistent storage)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgresql://username:password@localhost:5432/relayer_db

# Monitoring and Alerting
# -----------------------------------------------------------------------------
# Enable performance metrics collection
ENABLE_METRICS=true

# Alert webhook URL for critical errors
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Development and Testing
# -----------------------------------------------------------------------------
# Enable debug mode for detailed logging
DEBUG_MODE=false

# Use testnet/devnet instead of mainnet
USE_TESTNET=true

# Mock mode for testing without real blockchain interactions
MOCK_MODE=false

# Cross-Chain Order Processing
# -----------------------------------------------------------------------------
# Default order expiration time (in seconds)
DEFAULT_ORDER_EXPIRATION=3600

# Minimum order amount (to prevent dust orders)
MIN_ORDER_AMOUNT=1000000

# Maximum order amount (security limit)
MAX_ORDER_AMOUNT=1000000000000000000000

# Rate Limiting
# -----------------------------------------------------------------------------
# Maximum number of orders to process per minute
MAX_ORDERS_PER_MINUTE=60

# Maximum concurrent order processing
MAX_CONCURRENT_ORDERS=10

# Error Handling
# -----------------------------------------------------------------------------
# Maximum number of retries for failed blockchain operations
MAX_BLOCKCHAIN_RETRIES=3

# Delay between retries (in milliseconds)
RETRY_DELAY=5000

# Circuit breaker settings
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=60000

# Cache Configuration
# -----------------------------------------------------------------------------
# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379

# Cache TTL for order data (in seconds)
ORDER_CACHE_TTL=300

# Health Check Configuration
# -----------------------------------------------------------------------------
# Health check interval (in milliseconds)
HEALTH_CHECK_INTERVAL=30000

# Maximum acceptable response time for health checks (in milliseconds)
HEALTH_CHECK_TIMEOUT=5000

# Additional Configuration
# -----------------------------------------------------------------------------
# Enable CORS for API endpoints
ENABLE_CORS=true

# JWT secret for API authentication (if needed)
# JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
# ENCRYPTION_KEY=your_encryption_key_here

# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in bytes)
MAX_UPLOAD_SIZE=10485760

# Upload directory
UPLOAD_DIR=./uploads

# Temporary directory for processing
TEMP_DIR=./temp

# =============================================================================
# IMPORTANT SECURITY NOTES:
# 
# 1. Never commit the actual .env file to version control
# 2. Keep private keys secure and use hardware wallets in production
# 3. Use different keys for testnet and mainnet
# 4. Regularly rotate API keys and secrets
# 5. Monitor for unusual activity and set up alerts
# 6. Use environment-specific configurations
# =============================================================================

# Example Production Overrides (uncomment and modify as needed):
# NODE_ENV=production
# LOG_LEVEL=WARN
# USE_TESTNET=false
# MOCK_MODE=false
# DEBUG_MODE=false
# POLLING_INTERVAL=10000
# MAX_RETRIES=10