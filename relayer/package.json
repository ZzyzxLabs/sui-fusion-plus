{
  "name": "relayer",
  "version": "1.0.0",
  "description": "Cross-chain relayer service for SUI Fusion Plus",
  "main": "dist/index.js",
  "scripts": {
    "example": "tsx scripts/example.ts",
    "example:node": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/example.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
    "build-custom": "cd ../cross-chain-sdk-custom/cross-chain-sdk && npm run build",
    "build-sdk": "cd ../cross-chain-sdk-custom/cross-chain-sdk && npm run build",
    "build-all": "npm run build-sdk && npm run build",
    "dev-with-sdk": "npm run build-sdk && npm run dev"
  },
  "keywords": [
    "relayer",
    "cross-chain",
    "sui",
    "fusion",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "@mysten/dapp-kit": "^0.17.2",
    "@mysten/sui": "^1.36.1",
    "cors": "^2.8.5",
    "cross-chain-sdk-custom": "file:../cross-chain-sdk-custom/cross-chain-sdk",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}